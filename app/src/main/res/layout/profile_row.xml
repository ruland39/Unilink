<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="0dp"
    android:paddingHorizontal="0dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_row_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="@color/lighter_grey"
        app:cardElevation="1dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/border"
                android:tint="@color/light_grey"
                android:layout_centerVertical="true"
                android:visibility="visible"
            />

            <androidx.cardview.widget.CardView
                android:id="@+id/profilepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/purple_main"
                app:cardCornerRadius="1000dp"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="4dp"
                app:cardElevation="0dp"
                android:visibility="visible"

                >

                <ImageButton
                    android:id="@+id/profilepicimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:contentDescription="@string/profile"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defaultprofilepicturesmall"
                    android:visibility="visible"
                    />

            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/profilepicbutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_alignTop="@id/profilepic"
                android:layout_alignBottom="@id/profilepic"
                android:layout_alignRight="@id/profilepic"
                android:layout_alignLeft="@id/profilepic"
                android:src="@null"
                android:background="@null"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/defaultusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/profilepic"
                android:fontFamily="@font/nunitobold"
                android:text="@string/personusernametextviewmaincontainer"
                android:textColor="@color/abit_grey"
                android:textSize="16sp" />


            <ImageButton
                android:id="@+id/waveorconnectbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:contentDescription="@string/connect"
                android:src="@drawable/wavesmallbutton" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_below="@id/defaultusername"
                android:layout_toEndOf="@id/profilepic"
                android:layout_marginStart="2dp"
                android:paddingEnd="64dp"
                >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/interestlinearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="4dp"
                >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/interest1card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/light_purple"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        >

                        <TextView
                            android:id="@+id/interest1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/interest1"
                            android:fontFamily="@font/nunitosemibold"
                            android:textSize="10sp"
                            android:textColor="@color/purple_main"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"
                            />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/interest2card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/light_purple"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        >

                        <TextView
                            android:id="@+id/interest2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/interest2"
                            android:fontFamily="@font/nunitosemibold"
                            android:textSize="10sp"
                            android:textColor="@color/purple_main"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"

                            />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/interest3card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/light_purple"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        >

                        <TextView
                            android:id="@+id/interest3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/interest3"
                            android:fontFamily="@font/nunitosemibold"
                            android:textSize="10sp"
                            android:textColor="@color/purple_main"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="8dp"

                            />

                    </androidx.cardview.widget.CardView>



            </androidx.appcompat.widget.LinearLayoutCompat>

            </HorizontalScrollView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>