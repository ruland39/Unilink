<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_row_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/lighter_grey"
        app:cardElevation="1dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/border"
                android:tint="@color/light_grey"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="4dp"
            />

            <ImageButton
                android:id="@+id/profilepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:background="@null"
                android:contentDescription="@string/profile"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:src="@drawable/defaultprofilepicturesmall" />

            <TextView
                android:id="@+id/defaultusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_toRightOf="@id/profilepic"
                android:fontFamily="@font/nunitobold"
                android:text="@string/personusernametextviewmaincontainer"
                android:textColor="@color/abit_grey"
                android:textSize="16sp" />


            <ImageButton
                android:id="@+id/waveorconnectbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:contentDescription="@string/connect"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:src="@drawable/wavesmallbutton" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="15dp"
                android:layout_below="@id/defaultusername"
                android:layout_toRightOf="@id/profilepic"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/interest1card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/light_purple"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    >

                    <TextView
                        android:id="@+id/interest1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interest1"
                        android:fontFamily="@font/nunitosemibold"
                        android:textSize="10sp"
                        android:textColor="@color/purple_main"
                        android:layout_marginVertical="4dp"
                        android:layout_marginHorizontal="8dp"

                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/interest2card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/light_purple"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    >

                    <TextView
                        android:id="@+id/interest2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interest2"
                        android:fontFamily="@font/nunitosemibold"
                        android:textSize="10sp"
                        android:textColor="@color/purple_main"
                        android:layout_marginVertical="4dp"
                        android:layout_marginHorizontal="8dp"

                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/interest3card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/light_purple"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    >

                    <TextView
                        android:id="@+id/interest3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interest3"
                        android:fontFamily="@font/nunitosemibold"
                        android:textSize="10sp"
                        android:textColor="@color/purple_main"
                        android:layout_marginVertical="4dp"
                        android:layout_marginHorizontal="8dp"

                        />

                </androidx.cardview.widget.CardView>



            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>